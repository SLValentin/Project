
        <div class='card ms-5 mb-3 col-5 p-0'>
          <img class='card-img-top' src='{{img}}' />
          <div class='card-body'>
            <div>
              {{#if isHot}}
                <div
                  class='mb-2 badge rounded-pill text-bg-warning'
                > HOT</div>
              {{/if}}
              {{#if isNew}}
                <div
                  class='badge rounded-pill text-bg-primary'
                >Нове</div>
              {{/if}}

              {{#if isFast}}
                <div
                  class='badge text-bg-success mb-2'
                >Швидка доставка</div>
              {{/if}}

              {{#if isFree}}
                <div
                  class='badge text-bg-secondary'
                >Безкоштовна доставка</div>
              {{/if}}
            </div>
            <h6 class='mt-3 mb-3'>{{name}}</h6>
            {{#with review}}
              <span>{{amount}}
                {{text}}</span>
            {{/with}}
            <h5 class='mt-3 mb-3'>{{price}}</h5>
            <div class="mb-2">{{delivery}}</div>
            <div>
            {{#each buttons}}
              <a href="{{link}}" class=" m-2 btn {{#if isPrimary }}btn-primary {{else}}btn-secondary {{/if}}">{{text}}</a>
            {{/each}}
            </div>
            <ul class="mt-2">
              {{#each characteristics}}
              <li>{{title}}: {{value}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
    