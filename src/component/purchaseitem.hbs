{{#each itemList}}
  <div class='row'>
    <div class='col-3 mt-4'>
      <div class='list-group list-group-flush'>
        <div class='list-group-item'>
          {{number}}
          <strong>{{status}}</strong>

        </div>
      </div>
    </div>
    <div class='col-2 mt-4'>
      <div class='list-group list-group-flush'>
        <div class='list-group-item'>
          {{#with amount}}
            <span>{{title}}</span>
            <br />
            <strong>{{value}}</strong>
          {{/with}}

        </div>
      </div>
    </div>
    <div class='col-4'>
      <div class='list-group list-group-flush'>
        <div class='list-group-item'>
          {{#each images}}
            <img src='{{this}}' />
          {{/each}}
        </div>
      </div>
    </div>
    <div class='col-3 ps-5 mt-4'>
      <div class='list-group list-group-flush'>
        <div class='list-group-item'>
          {{#with button}}
            <a
              href='{{link}}'
              class='btn btn-primary'
            >{{text}}</a>
          {{/with}}
        </div>
      </div>
    </div>
  </div>
  <hr />
{{/each}}